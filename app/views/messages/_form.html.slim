= form_for(message, url: order_messages_path(), local: true) do |form|
  - if message.errors.any?
    #error_explanation
      h2
        = pluralize(message.errors.count, "error")
        = t('.error')
      ul
        - message.errors.full_messages.each do |message|
          li = message
  p
    = t('.email')
    = current_user.email
    | |
    =t('.id') 
    =current_user.id
  .field
    = form.label :name
    = form.text_field :name
  .field
    = form.label :text
    = form.text_area :text
  .actions
    = form.submit
  