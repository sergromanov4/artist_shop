<h1><%= t('.title_page') %></h1>

<% @user.orders.each do |user|%>

<div class="card" >
        <div class="card-img-top">
          <%= image_tag user.image_for_order.url(:thumb), class:"card-img-top" if user.image_for_order? %>
            <br />
            <br />
          <%= image_tag user.painted_picture.url(:thumb), class:"card-img-top" if user.painted_picture? %>
        </div> 

          <div class="card-body">
            <h4 class="card-title"><%= t('.title') %><%= user.title %> | id: <%= user.id %></h4> 
            <p class="card-text"><%= t('.description') %><%= user.description %></p>
             
            <% if user.price %>
              <p class="card-text"><%= t('.price') %><%= number_to_currency(user.price) %></p>
              <% else %>
              <p><%= t('.not_raited') %></p>
            <% end %>
            
            <p class="card-text"><%= t('.current_status') %><%= user.status.name %></p>
          </div>

          <p><%= link_to t('.more_info'), user, class:"btn"  if user_signed_in?%> </p>

          <hr />
       </div>

<% end %>